{
  "name": "fb-automation-desktop",
  "version": "5.0.0",
  "private": true,
  "author": "stuz",
  "main": "electron/main.js",
  "description": "Facebook automation bot",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm:next:dev\" \"npm:electron:dev\"",
    "next:dev": "next dev",
    "electron:dev": "electron .",
    "build": "npm run next:build && electron-builder",
    "next:build": "next build",
    "start": "electron .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "build": {
    "appId": "com.stuz.fbautomation",
    "productName": "FB Automation",
    "asar": true,
    "asarUnpack": [
      "server.js"
    ],
    "files": [
      "electron/**/*",
      "server.js",
      "package.json",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "prisma/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.2.1",
    "next": "15.5.2",
    "next-auth": "^4.24.11",
    "papaparse": "^5.5.3",
    "prisma": "^6.15.0",
    "puppeteer": "^24.18.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.19.12",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "app-builder-bin": "^5.0.0-alpha.12",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
